extends layouts/USersMenu

block content
        div(class="position-relative" style="margin-top: 0px;")
            div(id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel")
                div(class="carousel-inner")
                    div(class="carousel-item active" data-mdb-interval="2000")
                        img(src="https://cdn.pixabay.com/photo/2018/01/14/23/12/nature-3082832_960_720.jpg" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="...")
                    div(class="carousel-item" data-mdb-interval="4000")
                        img(src="https://mdbcdn.b-cdn.net/img/new/slides/041.webp" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="...")
                    div(class="carousel-item")
                        img(src="https://mdbcdn.b-cdn.net/img/new/slides/043.webp" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="...")
                
            div(class="position-absolute top-100 start-50 translate-middle")
                div(class="card w-auot text-center bg-dark")
                    div(class="card-body")
                        form(action="/UserCheckRoom" method="get" class="row g-3")
                            div(class="col-auto")
                                label(for="" class="text-white pb-0") วันที่เข้า 
                            div(class="col-auto")
                                input(type="date" class="form-control" id="inputdate1" onchange="click()" placeholder="" name="dateStart" required)
                            div(class="col-auto")
                                label(for="" class="text-white") วันที่ออก
                            div(class="col-auto")
                                input(type="date" class="form-control" id="inputdate2" placeholder="" name="dateEnd" required)
                            div(class="col-auto")
                                select(class="form-select" id="t" aria-label="Default select example" name="TypeRoom" required)
                                    option(value="1") โดม
                                    option(value="2") กระโจม
                                    option(value="3") บ้าน
                            div(class="col-auto")
                                button(type="submit" onclick="sisiondate()" class="btn btn-primary") ค้นหา
                                script.
                                        function sisiondate() {
                                        let d1 = document.getElementById('inputdate1').value
                                        let d2 = document.getElementById('inputdate2').value    
                                        sessionStorage.setItem('d1', d1)
                                        sessionStorage.setItem('d2', d2)
                                         }
                                        function click() {
                                            document.getElementById('inputdate2').innerHTML = Date.now()
                                        }


        div(class="container" style="margin-top: 100px")
        if !results

        else
            each data in results
                div(class="d-flex justify-content-center mb-3")
                    div(class="card w-50") 
                        div(class="card-body")
                            div(class="row")
                                div(class="col-3") 
                                    img(src=data.img class="card-img-top d-flex align-items-center" alt="..." style="width: 250px; height: 200px;")
                                div(class="col-1") 
                                div(class="col-4")
                                    h5(class="card-title") #{data.name_room} #{data.room_name_type}
                                    input(type="hidden" id="id_room" value=`${data.id_room}`)
                                    h6 รายละเอียด
                                    p(class="card-text")   #{data.detail_room}
                                    p(class="card-text")   ราคา #{data.price_room}
                                div(class="col-3")
                                div(class="col-1 align-self-end")
                                    a(href=`/UserReserveRoom` onclick="number_room()" class="btn btn-primary mt-auto p-3 bd-highlight") จอง
                                    script.
                                        function number_room() {
                                        let id_room = document.getElementById('id_room').value
                                        sessionStorage.setItem('id_room', id_room)
                                        
                                                }
                                    

