extends layouts/default.pug

block content
    .d-flex.m-3
        h3.me-auto.m-0  ตั้งค่า/เพิ่มที่พัก
        a.btn.btn-success.col-2(href=`/Admin/newRoom`) เพิ่มข้อมูล
    div 
        table(class="table" id="myTable")
                thead 
                    tr  
                        th รูป
                        th หมายเลขห้อง
                        th ประเภท
                        th ราคา     
                    tbody
                        each room in results
                            tr  
                                td
                                    img.rounded(src=room.img1 witch="100px" Height="100px")
                                td #{room.name_room}
                                td #{room.detail_room}
                                td #{room.price_room}
                                    a.btn.btn-primary.btn-sm.ms-1(href=`/delete/${room.id_room}`) แก้ไข
                                    a.btn.btn-danger.btn-sm.ms-1(href=`/admin/${room.id_room}/delete`) ลบ 
    
                    link(href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet" type="text/css")
                    script(src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript")
                    script.
                        var table = new DataTable("#myTable", {perPage: 5});