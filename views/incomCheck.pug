extends layouts/default.pug

block content
        container 
            div.d-flex.justify-content-around
                h3 #{dateStart}
                H3 ถึง
                H3 #{dateEnd}
            table(class="table" id="myTable")
                thead 
                    tr 
                        th ห้อง
                        th จำนวนห้อง
                        th ราคา
                        th รวม
                        th #
                tbody
                    - var total = 0 
                    each incom in result
                        tr 
                            - total =  total+Number(incom.priceall)
                            td #{incom.name_room}
                            td #{incom.counttotlo}
                            td #{incom.price}
                            td #{incom.priceall}
                            
                    tr 
                        td 
                        td 
                        td รวม 
                        td #{total}
            link(href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet" type="text/css")
            script(src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript")
            script.
                new DataTable("#myTable");
                        
                    
                        
            
                    