extends layouts/default

block content
        div.m-5
            h1.d-flex.justify-content-center อนุมัติการจอง
            table(class="table" id="myTable")
                    thead 
                        tr  
                            th ชื่อ
                            th เวลา
                            th เบอร์
                            th จัดการข้อมูล
                        tbody 
                            each data in results
                                tr 
                                    td #{data.name}
                                    td #{data.day_start.toLocaleDateString('th-TH', {year: 'numeric', month: 'long', day: 'numeric'})} - #{data.day_end.toLocaleDateString('th-TH', {year: 'numeric', month: 'long', day: 'numeric'})}
                                    td #{data.phon}
                                    td 
                                        a.btn.btn-success.col-5.mx-auto.me-1(href=`/admin/confirmApprove/${data.id_reserve}/approve`) อนุมัติ
                                        a.btn.btn-danger.col-3.mx-auto.me-1(href=`/admin/confirmDelete/${+data.id_reserve}/delete`) ลบ
            
                        link(href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet" type="text/css")
                        script(src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript")
                        script.
                            new DataTable("#myTable");